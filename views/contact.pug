extends layout

block content

    section#Contact
                
        form(id="contact-form",action="contact/send",method="POST",enctype="multipart/form-data")

            label(for="firstname") Prénom
            input(type="text",name="firstname")

            label(for="lastname") Nom
            input(type="text",name="lastname",required)

            label(for="email") Adresse email
            input(type="email",name="email",required)

            label(for="subject") Objet
            input(type="text",name="subject",required)

            label(for="message") Message
            textarea(name="message",required) 

            label(for="miel") Pot de miel (ne pas remplir si vous êtes humain) :
            input(type="text",name="miel")

            .h-captcha(data-sitekey="7f9b11ad-fc16-4cb6-99c7-160e9319c17d",data-callback="hcaptcha_callback",data-expired-callback="hcaptcha_expired_callback")

            button(type="submit",value="submit",disabled="true") Envoyer

    script(src='https://js.hcaptcha.com/1/api.js' async='' defer='')
    
    // callback functions for the button
    script(src="/javascripts/hCaptcha.js")
